    ViewBag.Title = "ادارة المسخدمين";
}


<div class="card">
    <div class="card-body">

        <table class="table table-striped table-bordered table-hover" id="tblAjax">
            <thead>
                <tr>
                    <th width="20%">
                        اسم المستخدم
                    </th>
                    <th width="25%">
                        ايميل المستخدم
                    </th>
                    <th width="15%">
                        رقم التواصل
                    </th>
                    <th width="15%">
                        نوع المستخدم
                    </th>
                    <th width="10%">
                        الحالة
                    </th>
