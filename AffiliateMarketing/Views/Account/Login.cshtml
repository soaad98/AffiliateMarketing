@model AffiliateMarketing.Models.Account.LoginViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_MainLayout";
}


<partial name="_NavPartial" />

<div class="view" style="background-image: url('/sign-in/img/b.png'); background-repeat: no-repeat; background-size: cover; background-position: center center;">

    <!-- Mask & flexbox options-->
    <div class="mask rgba-gradient align-items-center">
        <!-- Content -->
        <div class="container" style="padding-top: 60px; padding-bottom: 60px">
            <!--Grid row-->
            <div class="row mt-5">
                <!--Grid column-->
                <div class="text-color col-lg-6 text-center text-md-center text-lg-left">
                    <h1 class="mt-5 h1-responsive font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">Sign in right now! </h1>
                    <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
                    <h6 class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rem repellendus quasi fuga
                        nesciunt dolorum nulla magnam veniam sapiente, fugiat! Commodi sequi non animi ea
                        dolor molestiae.
                    </h6>
                    <hr class="hr-light mb-3 mt-4">
                    <div class="inline-ul">
                        <button type="button" class="btnSignUp" onclick="window.location='/Account/MarRegister';"><span><strong>Sign up as merchant</strong></span></button>
                        <button type="button" class="btnSignUp" onclick="window.location='/Account/PubRegister';"><span><strong>Sign up as publisher</strong></span></button>
                    </div>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="mt-5 col-lg-6 col-xl-5 mb-4" style="z-index: 3">
                    <!--Form-->
                    <div class="card wow fadeInRight" data-wow-delay="0.3s">

                        <form asp-action="Login" class="card-body text-color">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="md-form">
                                <i class="fas fa-user prefix white-text active"></i>
                                <label asp-for="Username">Your name</label>
                                <input asp-for="Username" class="white-text form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <br>
                            <div class="md-form">
                                <i class="fas fa-lock prefix white-text active"></i>
                                <label asp-for="Password">Your password</label>
                                <input asp-for="Password" class="white-text form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                </label>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btnSignIn"><span><strong>Sign in</strong></span></button>

                            </div>

                            @*<div class="form-group">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>*@
                        </form>


                    </div>
                    <!--/.Form-->
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>








@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Style {
    <link href="~/sign-in/css/style-sign-up.css" rel="stylesheet" />
}
